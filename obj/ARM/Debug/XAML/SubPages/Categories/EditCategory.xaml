<Page x:ConnectionId='1'
    x:Class="Salary_Control.XAML.SubPages.EditCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Salary_Control.XAML.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='2' VerticalAlignment="Top" Margin="10"                     >
            <StackPanel Orientation="Horizontal">
                <SymbolIcon 
                    Symbol="Back"
                    VerticalAlignment="Center"
                    Margin="0 0 5 0"
                    />
                <TextBlock>Назад</TextBlock>
            </StackPanel>
        </Button>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBox x:ConnectionId='3' 
                    PlaceholderText="Название категории" 
                    Margin="0 0 0 20"
                    x:Name="categoryName"
                                                        
                    />
                <ColorPicker x:ConnectionId='4'
                    IsColorChannelTextInputVisible="False"
                    IsHexInputVisible="False"
                    x:Name="categoryColor"
                                                                      
                    />

                <Button x:ConnectionId='5' Margin="0 20 0 0" HorizontalAlignment="Center"                     >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon 
                    Symbol="Save"
                    VerticalAlignment="Center"
                    Margin="0 0 5 0"
                    />
                        <TextBlock>Сохранить</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

