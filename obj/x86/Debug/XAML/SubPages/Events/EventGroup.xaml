<Page x:ConnectionId='1'
    x:Class="Salary_Control.XAML.SubPages.EventGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Salary_Control.XAML.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mctoolkit="using:Microsoft.Toolkit.Uwp.UI.Converters" xmlns:entities="using:Salary_Control.Source.API.Entities"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <mctoolkit:BoolNegationConverter x:Key="boolToNegative"/>
    </Page.Resources>
    
    <Grid>

        <StackPanel Orientation="Vertical">
            <CommandBar DefaultLabelPosition="Right">
                <AppBarButton x:ConnectionId='17' 
					Icon="ClearSelection" 
					Label="Очистить выделение"
					                      
				    />
                <AppBarButton x:ConnectionId='18' 
					    Icon="Edit" 
					    Label="Изменить режим"
					                          
					    />
                <CommandBar.SecondaryCommands>
                    <AppBarButton x:ConnectionId='19' 
					    Icon="Delete" 
					    Label="Удалить выбранные события"
					                                                 
					    />
                    <AppBarButton x:ConnectionId='20' 
					    Icon="Delete" 
					    Label="Удалить всё"
					                                            
					    />
                </CommandBar.SecondaryCommands>
            </CommandBar>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="10 10 0 0">
                    <CalendarDatePicker x:ConnectionId='8'
                                                                   
                        Header="Выберите дату группы событий"
                        />

                    <RichTextBlock Margin="0 10 0 0">
                        <Paragraph>
                            <Run>Cобытия, которые произошли в этот день:</Run>
                        </Paragraph>
                    </RichTextBlock>

                    <ScrollViewer>
                        <ListView x:ConnectionId='9' 
                            x:Name="list" 
                                                                    
                            SelectionMode="Extended"
                            >
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='11' Background="Transparent">
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem x:ConnectionId='12' 
                                                    Text="Изменить событие" 
                                                                          
                                                                                   
                                                    >
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Edit"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem x:ConnectionId='13' 
                                                    Text="Удалить событие" 
                                                                       
                                                                                   
                                                    >
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Delete"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>

                                        <StackPanel Orientation="Vertical">
                                            <TextBlock x:ConnectionId='14'                     />
                                            <Grid x:ConnectionId='15'                                     >
                                                <TextBlock x:ConnectionId='16'                              />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>


                <Grid x:ConnectionId='2'                                                                    Padding="40 5 0 0">
                    <StackPanel Orientation="Vertical" Width="200">
                        <TextBlock Margin="0 0 0 10">Создать событие</TextBlock>
                        <TextBox x:ConnectionId='4' x:Name="newEventName" PlaceholderText="Название нового события"/>
                        <TextBox x:ConnectionId='5' 
                            x:Name="newEventCost" 
                            Margin="0 10 0 10" 
                            InputScope="Number"
                            PlaceholderText="Кол-во денег"
                            />
                        <AutoSuggestBox x:ConnectionId='6' 
                            x:Name="newEventCategory" 
                            PlaceholderText="Название категории"
                            QueryIcon="Find"
                                                                  
                            />

                        <Button x:ConnectionId='7'                     Margin="0 20 0 0">
                            Создать событие
                        </Button>
                    </StackPanel>
                </Grid>



                <Grid x:ConnectionId='3'                                                                    >
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

